  "homepage": "https://github.com/gopangolin/wp-reactivate#readme",
  "dependencies": {
    "@babel/polyfill": "^7.4.3",
    "axios": "^0.18.0",
    "cleave.js": "^1.4.10",
    "isomorphic-fetch": "^2.2.1",
    "match-sorter": "^2.3.0",
    "moment": "^2.24.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-datepicker": "^2.3.0",
